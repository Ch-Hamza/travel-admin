{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - List Reservation {% endblock %}

{% block body %}

    {{ parent() }}

<!-- Main content -->
<div class="content-wrapper">
    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Reservation</span> - List</h4>
            </div>
        </div>

        <div class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><a href="{{ path('index_page') }}"><i class="icon-home2 position-left"></i> Home</a></li>
                <li class="active">Reservation</li>
            </ul>
        </div>
    </div>
    <!-- /page header -->

    <!-- Content area -->
    <div class="content">

        <!-- Table -->
        <div class="panel panel-flat">
            <div class="panel-heading">
                <div class="row">
                    {% if(app.request.attributes.get('_route')=="index_reservation_page") %}
                        <a href="{{ path('add_reservation_page')}}" class="btn btn-success"><i class="icon-plus3 position-left"></i>Add Reservation</a>
                    {% endif %}

                </div>
            </div>


            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Reservation ID</th>
                        <th>Trip ID</th>
                        <th>Email</th>
                        <th>Nombre adultes</th>
                        <th>Nombre enfants</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reservation in list %}
                        <tr>
                            <td>{{ reservation.id }}</td>
                            <td>{{ reservation.trip.id }}</td>
                            <td>{{ reservation.Email }}</td>
                            <td>{{ reservation.nbrAdultes }}</td>
                            <td>{{ reservation.nbrEnfants }}</td>
                            <td>
                                {% if reservation.statut %}
                                    <span class="label bg-success-400">Enabled</span>
                                {% else %}
                                    <span class="label bg-danger-400">Disabled</span>
                                {% endif %}
                            </td>
                            <td>
                                <ul class="icons-list mt-15">
                                    <li><a href="{{ path('enable_reservation_page', {'id': reservation.id}) }}" data-popup="tooltip" title="Toggle"><i class="icon-checkmark"></i></a></li>
                                    <li><a href="{{ path('edit_reservation_page', {'id': reservation.id}) }}" data-popup="tooltip" title="Edit"><i class="icon-pencil5"></i></a></li>
                                    <li><a href="{{ path('delete_reservation_page', {'id': reservation.id}) }}" data-popup="tooltip" title="Delete"><i class="icon-trash" onclick="return confirm('Are you sure you want to Delete this Reservation?')"></i></a></li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
        <!-- /table -->


    </div>
    <!-- /content area -->
</div>
    <!-- /main content -->

    </div>
    <!-- /page content -->

    </div>
    <!-- /page container -->

{% endblock %}